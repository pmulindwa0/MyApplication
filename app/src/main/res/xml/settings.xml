<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="crop"
        android:summary="What are the crop or plant preferences of your field"
        android:title="Crop Species"></EditTextPreference>

    <EditTextPreference
        android:key="location"
        android:summary="Please provide your geographical location"
        android:title="Your Location"></EditTextPreference>

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues"
        android:key="activity"
        android:summary="Select the kind of activity that you would like to carry out on your field"
        android:title="Activity" />
</PreferenceScreen>